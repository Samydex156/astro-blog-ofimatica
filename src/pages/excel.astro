<style>
    .page-header {
        text-align: center;
        padding: 3rem 0;
        margin-bottom: 2rem;
    }

    .icon-header {
        font-size: 3rem;
        margin-bottom: 1rem;
        background: #e6f4ea;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin: 0 auto 1rem;
        cursor: default;
    }

    .page-header h1 {
        color: var(--color-excel);
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .resources-section {
        margin-bottom: 4rem;
    }

    .section-title {
        margin-bottom: 1.5rem;
        border-left: 4px solid var(--color-excel);
        padding-left: 1rem;
    }

